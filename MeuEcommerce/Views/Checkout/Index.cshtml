@model MeuEcommerce.Models.CheckoutIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Carrinho de Compras</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Produto(s)</td>
            <td>Descrição</td>
            <td>Valor</td>
            <td>Quantidade</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Carrinho.Itens)
        {
            <tr>
                <td>@item.Value.Nome</td>
                <td>@item.Value.Descricao</td>
                <td>R$ @item.Value.PrecoUnitario.ToString("N2")</td>
                <td>
                    <a href="" class="btn btn-primary">-</a>
                    @item.Value.Quantidade
                    <a href="" class="btn btn-dark">+</a>
                    <a href="" class="btn btn-danger">Remover</a>
                </td>
            </tr>
        }
        <tr></tr>
        <tr>
            <td colspan="2">Total: </td>
            <td colspan="4">R$ @Model.Carrinho.GetPrecoTotal().ToString("N2")</td>
        </tr>
    </tbody>    
</table>
<a href="" class="btn">Limpar</a>
<a href="/checkout/CompraRealizada" class="btn btn-primary">Continuar</a>

